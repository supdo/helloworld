<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mainScrollView"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#FFFFFF"
    android:fillViewport="false" >

    <RelativeLayout
        android:id="@+id/mainRelativeLayout"
        android:layout_width="fill_parent"
        android:layout_height="600dp" >

        <TextView
            android:id="@+id/tvUserName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="27dp"
            android:layout_marginTop="46dp"
            android:text="用户名：" />

        <EditText
            android:id="@+id/etUserName"
            android:layout_width="210dp"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/tvUserName"
            android:layout_toRightOf="@+id/tvUserName"
            android:ems="10" />

        <EditText
            android:id="@+id/etPassWord"
            android:layout_width="210dp"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/etUserName"
            android:layout_below="@+id/etUserName"
            android:layout_marginTop="36dp"
            android:ems="10"
            android:inputType="textPassword" />

        <TextView
            android:id="@+id/tvPassWord"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/etPassWord"
            android:layout_alignBottom="@+id/etPassWord"
            android:layout_toLeftOf="@+id/etPassWord"
            android:text="密码：" />

        <Button
            android:id="@+id/btnLogin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignRight="@+id/etUserName"
            android:layout_below="@+id/etPassWord"
            android:layout_marginTop="16dp"
            android:text="登陆" />

        <Button
            android:id="@+id/btnPhone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/tvUserName"
            android:layout_alignRight="@+id/btnLogin"
            android:layout_below="@+id/btnLogin"
            android:layout_marginTop="23dp"
            android:text="拨打电话" />

        <Button
            android:id="@+id/btnSMS"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/btnPhone"
            android:layout_alignRight="@+id/btnPhone"
            android:layout_below="@+id/btnPhone"
            android:layout_marginTop="25dp"
            android:text="发送短信" />

        <Button
            android:id="@+id/btnTabs"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/btnSMS"
            android:layout_alignRight="@+id/btnSMS"
            android:layout_below="@+id/btnSMS"
            android:layout_marginTop="25dp"
            android:text="标签页" />

        <Button
            android:id="@+id/btnLists"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/btnTabs"
            android:layout_alignRight="@+id/btnTabs"
            android:layout_below="@+id/btnTabs"
            android:layout_marginTop="25dp"
            android:text="列表页" />

    </RelativeLayout>
    
</ScrollView>